{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=BurgerDB;Integrated Security=True"
  },
  "Paging": {
    "PageSize": 20
  },
  "Uploads": {
    "MediaPath": "./img/",
    "MaxFileSizeBytes": 20971520,
    "AllowedContentTypes": [
      "image/bmp",
      "image/gif",
      "image/jpeg",
      "image/png",
      "image/tiff",
      "image/webp"
    ]
  }
}
